<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/m8"
    app:cardElevation="@dimen/m4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/m15"
        android:layout_marginTop="@dimen/m15"
        android:layout_marginRight="@dimen/m15"
        android:layout_marginBottom="@dimen/m15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#202020"
            android:textSize="@dimen/f8"
            tools:text="解释" />

        <TextView
            android:id="@+id/auther_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m8"
            android:textColor="#909090"
            android:textSize="@dimen/f5"
            tools:text="作者" />
    </LinearLayout>
</android.support.v7.widget.CardView>